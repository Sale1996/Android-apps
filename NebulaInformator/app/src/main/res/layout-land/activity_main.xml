<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:id="@+id/nebula_list_fragment"
        android:name="com.example.sale1996.nebulainformator.NebulaListFragment"
        tools:layout="@layout/fragment_nebula_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/nebula_detail_fragment"
        android:name="com.example.sale1996.nebulainformator.NebulaDetailFragment"
        tools:layout="@layout/fragment_nebula_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/nebula_list_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>